<form class="add-button">



<section>
  <h2>Create New Task</h2>

  <form class="new-post-form">
    <div>
      <label for="task-title">Title</label>
      <input type="text" id="task-title"/>
    </div>
    <div>
      <label for="task_info">Task</label>
      <input id="task_info"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if tasks.length}}
<section>
  <h2>Your Tasks</h2>
  <ol>
    {{#each tasks as |task|}}
    <li>
      {{!-- {{> task_info task}} --}}
      <a href="/dashboard/edit/{{id}}" class="edit-link">Edit Task</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
</form>

<script src="/javascript/create-task.js"></script>